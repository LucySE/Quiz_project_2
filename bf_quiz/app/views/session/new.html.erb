<br>
<div class="task-section-heading">
<h2>Login</h2>
</div>
<br>

<%# Print out an error message, if the SessionController set one %>
<% if flash[:error] %>
    <br>
    <strong>
        <%= flash[:error] %>
    </strong>
<% end %>

<%# Login form %>
<%= form_with url: login_path, local: true do |f| %> 
    <%= f.label :email %>
    <%= f.text_field :email %>
   
    <br>

    <%= f.label :password %>
    <%= f.password_field :password %>
    
    <br>

    <%= f.submit 'Login', class: 'button-primary' %>
<% end %>
