    </section>

    <section>
        <nav aria-label="Game menu" class="main-menu">

          <%= form_with model:@game, local:true, html: {multipart: true}  do |f| %>
          <%= f.hidden_field :status, value: false%>
          <%= f.hidden_field :user_id, value: @current_user%>
          <%= f.hidden_field :puzzle_id, value: 1%>
          <%= f.submit "Start Application Quiz", id:'submit_button'%>
          <%end %>

            <%= link_to 'View Previous Applications', user_path(@current_user.id), class: "button button-primary" %>


            <%# link_to 'View our top employees', scores_path, class: "button button-secondary" %>
