            <%= link_to 'Apply for Tech Job Corp', new_user_path, class: "button button-primary" %>

            <%= link_to 'Login', login_path, class: "button button-secondary" %>

            <%# link_to 'View our top employees', scores_path, class: "button button-secondary" %>
